<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mt-3">個人資料修改</h1>
            {{> message}}
            <form action="/users/{{user.id}}/edit?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Name</label><label class="text-danger">*</label>
                    <input type="text" id="name" name="name" class="form-control" placeholder="名字須在五十字以內"
                        value="{{ user.name }}">
                </div>
                <div class="form-group">
                    <label for="email">Email</label><label class="text-danger">*</label>
                    <input type="email" id="email" name="email" class="form-control" placeholder="請輸入信箱"
                        value="{{ user.email }}">
                </div>
                <div class="form-group">
                    <label for="account">Account</label><label class="text-danger">*</label>
                    <input type="account" id="account" name="account" class="form-control" placeholder="帳號需六碼以上"
                        value="{{ user.account }}">
                </div>
                <div class="form-group">
                    <label for="password">Password</label><label class="text-danger">*</label>
                    <input type="password" id="password" name="password" class="form-control"
                        placeholder="密碼需八碼以上" value="{{ password }}">
                </div>
                <div class="form-group">
                    <label for="confirmPassword">Check Password</label><label class="text-danger">*</label>
                    <input type="password" id="checkPassword" name="checkPassword" class="form-control"
                        placeholder="再次輸入密碼" value="{{ checkPassword }}">
                </div>
                <button type="submit" class="btn btn-primary btn-block">修改</button>
            </form>
        </div>
    </div>