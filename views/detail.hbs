<form action="/todos/{{ todo.id }}?_method=DELETE" method="POST" style="display: inline;">
    <div class="row mt-5">
        <div class="col-md-6 m-auto">
            <div class="card card-body">
                <h1 class="text-center mt-3">待辦事項</h1>
                    <div class="form-group">
                        <label for="name">待辦事項</label>
                        <input type="text" id="name" name="name" class="form-control" placeholder="待辦事項"
                            value="{{ todo.name }}" disabled>
                    </div>
                    <div class="form-group">
                        <label for="date">日期</label>
                        <input type="text" id="date" name="date" class="form-control" placeholder="YYYY-MM-DD"
                            value="{{ todo.date }}" disabled>
                    </div>
                    <div class="form-group">
                        <label for="startTime">開始時間</label>
                        <input type="text" id="startTime" name="startTime" class="form-control" placeholder="--:--" value="{{ todo.startTime }}"disabled>
                    </div>
                    <div class="form-group">
                        <label for="endTime">結束時間</label>
                        <input type="text" id="endTime" name="endTime" class="form-control" placeholder="--:--" value="{{ todo.endTime }}" disabled>
                    </div>
                        <a type="button" class="btn btn-success btn-block" class="btn btn-success" href="/todos/{{ todo.id }}/edit">edit</a>
                        <button class="btn btn-danger btn-block" type="submit">delete</button>
                </form>
            </div>
        </div>
    </div>
</form>