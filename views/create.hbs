<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mt-3">新增待辦事項</h1>
            {{> message}}
            <form action="/todos/create" method="POST">
                <div class="form-group">
                    <label for="name">待辦事項</label>
                    <input type="text" id="name" name="name" class="form-control" placeholder="待辦事項" required>
                </div>
                <div class="form-group">
                    <label for="date">日期</label>
                    <input type="date" id="date" name="date" class="form-control" placeholder="日期">
                </div>
                <div class="form-group">
                    <label for="startTime">開始時間</label>
                    <input type="time" id="startTime" name="startTime" class="form-control" placeholder="開始時間">
                </div>
                <div class="form-group">
                    <label for="endTime">結束時間</label>
                    <input type="time" id="endTime" name="endTime" class="form-control" placeholder="結束時間">
                </div>
                <button type="submit" class="btn btn-primary btn-block">Create</button>
            </form>
        </div>
    </div>
</div>